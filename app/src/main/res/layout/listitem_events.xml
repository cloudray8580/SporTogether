<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/shape_listitem_event"
    android:id="@+id/listitem_events_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/listitem_events_sport_type_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/football"/>
        <TextView
            android:id="@+id/listitem_events_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:maxLines="2"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/listitem_events_require_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Require People : 5"
            android:textColor="#272727"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:id="@+id/listitem_events_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location : School Gym"
            android:textColor="#272727"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"
       android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/calender_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/listitem_events_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1-1-2016 21:31"
            android:inputType="date"
            android:textColor="#3263d4"
            android:textSize="17sp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
</LinearLayout>
